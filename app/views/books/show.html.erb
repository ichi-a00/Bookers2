<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/list' %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book Detail</h2>

      <table class='table table-hover table-inverse'>
        <tbody>
          <tr>
            <td>
              <%= image_tag('sample-author1.jpg') %><br />
              <%= @book.user.name %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><% if @book.user == current_user %>
                <%= link_to "edit", edit_book_path(@book) %>
                <% end %>
            </td>
            <td><% if @book.user == current_user %>
                <%= link_to "削除", book_path(@book), method: :delete %>
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>