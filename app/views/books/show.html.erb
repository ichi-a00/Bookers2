<p id="notice"></p>
<% if @comment.errors.any? %>
  <p class="alert alert-danger"><%= @comment.errors.count %> error(s) prohibited this obj from being saved:</p>
  <ul class="alert alert-danger">
  <% @comment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/list', user: @book.user %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>

      <table class='table table-hover table-inverse'>
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
              <br />
              <%= link_to user_path(@book.user.id) do %>
                  <%= @book.user.name %>
              <%end%>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <%end%>
            </td>
            <td><%= @book.body %></td>
            <!--いいね機能ついか--><!-- 応用課題6でテンプレート化しました-->
            <td class="favorite-btn">
              <%= render 'favorites/favorite-btn', book: @book %>
            </td>
            <td>コメント件数：<%= @book.comments.count %></td>
            <td><% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
                <% end %>
            </td>
            <td><% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger" %>
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <h4 class="my-3">コメントする</h4>
      <div>
        <%= form_with(model:[@book, @comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'2',placeholder: "コメントをここに" %>
          <%= f.submit %>
        <% end %>
      </div>
      <h4 class="my-3">コメント一覧</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>内容</th>
            <th>時間</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @book.comments.each do |com| %>
            <tr>
              <td><%= link_to user_path(com.user.id) do %>
                    <%= attachment_image_tag com.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></br>
                    <%= com.user.name %>
                  <% end %>
              </td>
              <td><%= com.comment %></td>
              <td><%= com.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td>
              <% if com.user == current_user %>
                  <%= link_to "削除", book_comment_path(com.book, com), method: :delete, class:"btn btn-sm btn-danger" %>
              <% end %>
              </td>
            <tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>