<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <img class="attachment user profile_image fallback" src="assets/images/no_image.jpg" />
        </tr>
        <tr>
          <th>name</th>
	        <th>free</th>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th></th>
        </tr>
      </table>

      <div class='row'>
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_20259" href="/users/20259/edit"></a>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>body</h4>
        <%= f.text_area :body %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book Detail</h2>

      <table class='table table-hover table-inverse'>
        <tbody>
          <tr>
            <td>
              <%= image_tag('sample-author1.jpg') %><br />
              <%= @book.user.name %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>edit</td>
            <td>destroy</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>