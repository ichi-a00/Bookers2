<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/list', user: @book.user %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>

      <table class='table table-hover table-inverse'>
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
              <br />
              <%= link_to user_path(@book.user.id) do %>
                  <%= @book.user.name %>
              <%end%>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <%end%>
            </td>
            <td><%= @book.body %></td>
            <!--いいね機能ついか-->
            <td><% if @book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    ★<%= @book.favorites.count %> いいね取り消す
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    ☆<%= @book.favorites.count %> いいねする
                  <% end %>
                <% end %>
            </td>
            <td><% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
                <% end %>
            </td>
            <td><% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger" %>
                <% end %>
            </td>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>