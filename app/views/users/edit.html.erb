<p id="notice"></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 p-5 px-sm-3 mx-auto">
      <h1>Original User Edit Page</h1>
      <h2>Edit User</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <!--%= render "devise/shared/error_messages", resource: resource %-->

        <div class="field my-3">
          <h4><%= f.label :name %></h4>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field my-3">
          <h4><label for="inputImage">ProfileImage</label></h4>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%><br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>

        <div class="field my-3">
          <h4><%= f.label :introduction %></h4>
          <%= f.text_area :introduction, autocomplete: "introduction" %>
        </div>

        <div class="actions my-3">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 p-5 px-sm-3 mx-auto">
      <!--<h2>Cancel my account</h2>
      <!--<p>Unhappy? %= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-sm btn-danger" %></p>-->

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
