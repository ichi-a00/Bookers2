<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
    <%= render 'books/list' %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |u| %>
          <tr>
            <td><%= image_tag('sample-author1.jpg') %></td>
            <td><%= link_to user_path(u.id) do %>
                  <%= u.name %>
                <%end%>
            </td>
            <td><%= u.email %></td>
          </tr>
          <%end%>

        </tbody>
      </table>
    </div>
  </div>
</div>

