<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <%= image_tag('sample-author1.jpg') %>
        </tr>
        <tr>
          <th>name</th>
	        <th><%= current_user.name%></th>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th><%= current_user.email%></th>
        </tr>
      </table>


      <div class='row'>
        <p><%= link_to "プロフィール編集", edit_user_registration_path(current_user), {class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_20259"} %></p>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>body</h4>
        <%= f.text_area :body %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag('sample-author1.jpg') %></td>
            <td><%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <%end%>
            </td>
            <td><%= book.body %></td>
          </tr>
          <%end%>
          <%= paginate @books %>

        </tbody>
      </table>
    </div>
  </div>
</div>

