<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/list', user: @user %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>User Info</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th>★</th>
            <th></th>
            <th>閲覧数</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
                <%end%>
            </td>
            <td><%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <%end%>
            </td>
            <td><%= book.body %></td>
            <!--いいね機能ついか, 非同期-->
            <td class="favorite-btn-<%= book.id %>">
              <%= render 'favorites/favorite-btn', book: book %>
            </td>
            <td>コメント件数：<%= book.comments.count %></td>
            <td><%= book.impressions_count %></td>
          </tr>
          <%end%>
          <%= paginate @books %>

        </tbody>
      </table>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比(%)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @today_count %></td>
            <td><%= @yesterday_count %></td>
            <td><%= @perday %></td>
        </tbody>
        <thead>
          <tr>
            <th>今週の投稿数</th>
            <th>先週の投稿数</th>
            <th>先週比(%)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @week_count %></td>
            <td><%= @lastweek_count %></td>
            <td><%= @perweek %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>