<p id="notice"></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 p-5 px-sm-3 mx-auto">
      <h2 class="mt-3">New Group</h2>
      <%= form_with model: @group, local:true do |f| %>
        <h4>name</h4>
        <%= f.text_field :name %>
        <h4>intro</h4>
        <%= f.text_area :introduction %>

        <h4>ProfileImage</h4>
        <%= f.attachment_field :image, placeholder: "グループ画像" %>

        <div class="my-5">
        <%= f.submit class:"btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "Group Index", groups_path %>
    </div>
  </div>
</div>