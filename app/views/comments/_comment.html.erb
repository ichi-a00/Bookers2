<% book.comments.each do |com| %>
  <tr>
    <td><%= link_to user_path(com.user.id) do %>
          <%= attachment_image_tag com.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></br>
          <%= com.user.name %>
        <% end %>
    </td>
    <td><%= com.comment %></td>
    <td><%= com.created_at.strftime('%Y/%m/%d %H:%M') %></td>
    <td><%= com.score %></td>
    <td>
    <% if com.user == current_user %>
        <%= link_to "削除", book_comment_path(com.book, com), method: :delete, remote: true, class:"btn btn-sm btn-danger" %>
    <% end %>
    </td>
  <tr>
<% end %>